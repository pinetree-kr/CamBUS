<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
   	xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/FragmentCityRoutes"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
	>
    
	<FrameLayout
		android:id="@+id/Title"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		>
		<ImageView
			android:id="@+id/titleBg"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:adjustViewBounds="true"
			/>
		<TextView
			android:id="@+id/TextTitle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:text=""
			android:textColor="@color/cambus_title"
			/>
	</FrameLayout>
	<RelativeLayout
	    android:id="@+id/Routes"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_below="@+id/Title"
	    >
		<LinearLayout
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:orientation="vertical"
		    android:gravity="center"
		    android:layout_centerInParent="true"
		    >
		    <LinearLayout
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:orientation="vertical"
		        android:layout_margin="10dp"
		        >
		        <ImageView
		            android:id="@+id/RouteBtnLine1"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:adjustViewBounds="true"
		            android:layout_gravity="center"
		             />
		        <TextView
		            android:id="@+id/RouteTextLine1"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center"
		            android:textColor="@color/city_route_national"
		            />
		        <TextView
		            android:id="@+id/RouteTextViaLine1"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center"
		            android:textColor="@color/city_route_via"
		            android:maxLines="2"
		            />
	        </LinearLayout>
		    <LinearLayout
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:orientation="vertical"
		        android:layout_margin="10dp"
		        >
		        <ImageView
		            android:id="@+id/RouteBtnLine2"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:adjustViewBounds="true"
		            android:layout_gravity="center"
		             />
		        <TextView
		            android:id="@+id/RouteTextLine2"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textColor="@color/city_route_national"
		            android:layout_gravity="center"
		            />
		        <TextView
		            android:id="@+id/RouteTextViaLine2"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textColor="@color/city_route_via"
		            android:layout_gravity="center"
		            android:maxLines="2"
		            />
		    </LinearLayout>
		    <LinearLayout
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:orientation="vertical"
		        android:layout_margin="10dp"
		        >
		        <ImageView
		            android:id="@+id/RouteBtnLine3"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center"
		            android:adjustViewBounds="true"
		             />
		        <TextView
		            android:id="@+id/RouteTextLine3"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center"
		            android:textColor="@color/city_route_national"
		            />
		        <TextView
		            android:id="@+id/RouteTextViaLine3"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center"
		            android:textColor="@color/city_route_via"
		            android:maxLines="2"
		            />
		    </LinearLayout>
	    </LinearLayout>
	</RelativeLayout>
</RelativeLayout>
